---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "./ProjectCard.astro";
import "../styles/global.css";
import { getCollection } from "astro:content";
const projects = await getCollection("my-work");
---

<BaseLayout>
  <section class="my__work padding" id="work">
    <h2 class="mywork__title--first">My</h2>
    {
      projects.map((project) => (
        <a href={`/my-work/${project.id}`}>
          <ProjectCard project={project.data} />
        </a>
      ))
    }
    <h2 class="mywork__title--second">/ Work</h2>
  </section>
</BaseLayout>
