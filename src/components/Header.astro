---
let menuOpen = false;
---

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 0 1.25rem 0; 
    width: 100vw;
    position: fixed;
    z-index: 10;
    background-color: rgba(244, 244, 244, 0.5);
    backdrop-filter: blur(2px);
  }

  .header__top {
    display: flex;
    width: 90vw;
    justify-content: space-between;
    align-items: flex-start;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: 1px;
  }

  .burger {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 3rem;
    height: 1.25rem;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 11;
  }

  .burger span {
    display: block;
    height: 2px;
    width: 100%;
    background: #000;
    transition: 0.3s ease;
  }

  .menu-overlay {
    position: fixed;
    inset: 0;
    background: #000;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
  }

  .menu-overlay nav {
    display: flex;
    flex-direction: column;
    text-align: center;
    gap: 2rem;
    font-size: 1.25rem;
    letter-spacing: 1px;
  }

  .menu-overlay a {
    color: #fff;
    text-decoration: none;
  }

  .menu-overlay.open {
    opacity: 1;
    pointer-events: all;
  }

  @media (min-width: 1440px) {
    .burger {
      display: none;
    }

    .menu-overlay {
      all: unset;
    }

    .header {
      justify-content: flex-end;
      gap: 2rem;
    }

    .header nav {
      display: flex;
      gap: 2rem;
    }

    .header nav a {
      color: black;
      text-decoration: none;
    }
  }
</style>
<div id="menu" class="menu-overlay">
  <nav>
    <a class="link" href="#work">/ MY WORK</a>
    <a class="link" href="#about">/ ABOUT ME</a>
    <a class="link" href="#contact">/ CONTACT</a>
  </nav>
  <button class="close"
    ><svg
      xmlns="http://www.w3.org/2000/svg"
      width="20"
      height="20"
      viewBox="0 0 20 20"
      fill="none"
    >
      <path
        d="M1 1L19 19"
        stroke="white"
        stroke-width="2"
        stroke-linecap="round"></path>
      <path
        d="M19 1L1 19"
        stroke="white"
        stroke-width="2"
        stroke-linecap="round"></path>
    </svg></button
  >
</div>
<header class="header">
  <div class="header__top">
    <div class="logo">LILAE</div>

    <button class="burger" aria-label="Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

<script>
  const burger = document.querySelector(".burger");
  const menu = document.getElementById("menu");
  const closeBtn = document.querySelector(".close");
  const navbarLinks = document.querySelectorAll(".menu-overlay a");

  burger?.addEventListener("click", () => {
    burger.classList.toggle("open");
    menu.classList.toggle("open");
  });

  closeBtn?.addEventListener("click", () => {
    menu.classList.remove("open");
  });

  navbarLinks.forEach((link) => {
    link.addEventListener("click", () => {
      menu.classList.remove("open");
    });
  });
</script>
