<header class="header">
  <div class="logo">LILA</div>

  <button class="burger" aria-label="Menu" onclick="toggleMenu()">
    <span></span>
    <span></span>
    <span></span>
  </button>

  <div id="menu" class="menu-overlay">
    <nav>
      <a href="#work">/ MY WORK</a>
      <a href="#about">/ ABOUT ME</a>
      <a href="#contact">/ CONTACT</a>
    </nav>
  </div>
</header>

<style>

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.2rem;
    position: relative;
    z-index: 10;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: 1px;
  }

  .burger {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 24px;
    height: 18px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 11;
  }

  .burger span {
    display: block;
    height: 2px;
    width: 100%;
    background: #000;
    transition: 0.3s ease;
  }

  .burger.open span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }
  .burger.open span:nth-child(2) {
    opacity: 0;
  }
  .burger.open span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  /* fullscreen */
  .menu-overlay {
    position: fixed;
    inset: 0;
    background: #000;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
  }

  .menu-overlay nav {
    display: flex;
    flex-direction: column;
    text-align: center;
    gap: 2rem;
    font-size: 1.25rem;
    letter-spacing: 1px;
  }

  .menu-overlay a {
    color: #fff;
    text-decoration: none;
  }

  .menu-overlay.open {
    opacity: 1;
    pointer-events: all;
  }

  /* desktop? */
  @media (min-width: 1440px) {
    .burger {
      display: none;
    }

    .menu-overlay {
      all: unset;
    }

    .header {
      justify-content: flex-end;
      gap: 2rem;
    }

    .header nav {
      display: flex;
      gap: 2rem;
    }

    .header nav a {
      color: black;
      text-decoration: none;
    }
  }
</style>

<script>
  function toggleMenu() {
    const menu = document.getElementById("menu");
    const burger = document.querySelector(".burger");

    if (!burger || !menu) return; // safe ok?

    burger.classList.toggle("open");
    menu.classList.toggle("open");
  }
</script>
